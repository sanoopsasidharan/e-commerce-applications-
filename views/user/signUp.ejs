<script>
  var nameValidated = false;
  var phoneValidated = false;
  var passwordValidated = false;
  var emailValidated = false;


  $("#login").keyup(function () {
    if ($("#login").val().match(/^[A-Za-z][A-Za-z\ ]/)) {
      $("#name-Text").show();
      $("#name-Text").text(" ");
      nameValidated = true;
    } else {
      $("#name-Text").show();
      $("#name-Text").text("Invalid name! try again");
      $("#name-Text").css("class", "invalid-feedback");
      nameValidated = false;
    }
    $("#login").keypress(function (num) {
      if ((num.charCode >= 33 && num.charCode <= 64) || (num.charCode >= 91 && num.charCode <= 96) || (num.charCode >= 123 && num.charCode <= 126)) {
        num.preventDefault();
      }
    });
    if ($("#login").val().length < 3) {
      $("#name-Text").show();
      $("#name-Text").text("Name should have type morethan 3 characters");
      $("#name-Text").css("class", "invalid-feedback");
      nameValidated = false;
    }
  });
  $("#login").blur(function () {
    if ($("#login").val() == "") {
      $("#name-Text").show();
      $("#name-Text").text("Name should not be empty!");
      $("#name-Text").css("class", "invalid-feedback");
      nameValidated = false;
    }
  });


  $("#password").keyup(function () {
    if ($("#password").val().match(/^[A-Za-z][A-Za-z\ ]/)) {
      $("#password-Text").show();
      $("#password-Text").text(" ");
      passwordValidated = true;
    } else {
      $("#password-Text").show();
      $("#password-Text").text("Invalid password! try again");
      $("#password-Text").css("class", "invalid-feedback");
      passwordValidated = false;
    }
    $("#password").keypress(function (num) {
      if ((num.charCode >= 33 && num.charCode <= 64) || (num.charCode >= 91 && num.charCode <= 96) || (num.charCode >= 123 && num.charCode <= 126)) {
        num.preventDefault();
      }
    });
    if ($("#password").val().length < 3) {
      $("#password-Text").show();
      $("#password-Text").text("password should have type morethan 3 characters");
      $("#password-Text").css("class", "invalid-feedback");
      passwordValidated = false;
    }
  });
  $("#password").blur(function () {
    if ($("#password").val() == "") {
      $("#password-Text").show();
      $("#password-Text").text("password should not be empty!");
      $("#password-Text").css("class", "invalid-feedback");
      passwordValidated = false;
    }
  });
  $("#mailValidation").keyup(function () {
    if ($("#mailValidation").val().match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/)) {
      $("#mail-type").text(" ");
      $("#mail-type").show();
      emailValidated = true;
    } else {
      $("#mail-type").show();
      $("#mail-type").text("Invalid email address");
      $("#mail-type").css("class", "invalid-feedback");
      emailValidated = false;
    }
  });
  $("#mailValidation").blur(function () {
    if ($("#mailValidation").val() == "") {
      $("#mail-type").show();
      $("#mail-type").text("Must enter email");
      $("#mail-type").css("class", "invalid-feedback");
      emailValidated = false;
    }
  });


  $("#numberValidation").keypress(function (num) {
    return num.charCode >= 48 && num.charCode <= 57;
  });
  $("#numberValidation").keyup(function () {
    if ($("#numberValidation").val().match(/^\d+$/)) {
      $("#text-Number").show();
      $("#text-Number").text(" ");
      phoneValidated = true;
    }
    if ($("#numberValidation").val().length < 10) {
      $("#text-Number").show();
      $("#text-Number").text("Phone number should be 10 digits!");
      $("#text-Number").css("class", "invalid-feedback");
      phoneValidated = false;
    }
  });

  $("#numberValidation").blur(function () {
    if ($("#numberValidation").val() == "") {
      $("#text-Number").show();
      $("#text-Number").text("Phone number is required!");
      $("#text-Number").css("class", "invalid-feedback");
      phoneValidated = false;
    }
  });



  $("#siginup_form").submit(function (num) {
    if ($("#login").val() == "" || $("#password").val() == "" || $("#mailValidation").val() == "" || $("#numberValidation").val() == "") {
      // alert("please fill the form properly");
      Swal.fire(
        'Unknown error !',
        'please fill the form properly',
        'warning'
      )
    }
    if ($("#login").val() == "" && $("#password").val() == "" && $("#mailValidation").val() == "" && $("#numberValidation").val() == "") {
      num.preventDefault();
      $("#name-Text").show();
      $("#mail-type").show();
      $("#text-Number").show();
      $("#password-Text").show();
    } else if (
      nameValidated &&
      passwordValidated &&
      emailValidated &&
      phoneValidated
    ) {
      num.preventDefault();
      $.ajax({
        url: '/signup',
        data: $('#siginup_form').serialize(),
        method: 'post',
        success: (response) => {
          if (response.status) {
            location.href = '/login'
          } else {
            document.getElementById('erorrMessage').innerHTML = "sorry enter another number"
          }
        }
      })

    } else {
      num.preventDefault();
    }
  });



